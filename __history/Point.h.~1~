//---------------------------------------------------------------------------

#ifndef PointH
#define PointH
//---------------------------------------------------------------------------
Class Point {
	private:
		int X, Y;
		int Color;
		void SetX(int x);
		void SetY(int y);
		void SetColor(bool color);

	public:
		point(int x, int y, bool color);

		int GetX() const;
		int GetY() const;
		bool GetColor() const;
		void ShowPoint();
	}
}
//---------------------------------------------------------------------------
#endif
