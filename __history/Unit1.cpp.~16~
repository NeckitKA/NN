//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
    if (points.empty()) {
		ShowPoints();
	}
}
//---------------------------------------------------------------------------

void TForm1::ShowPoints() {
	for (size_t i = 0; i < coordinatesOfPoints.size(); ++i) {
		if (i < coordinatesOfPoints.size() / 2) {
			points.push_back(new MyPoint(coordinatesOfPoints[i][0],
										 coordinatesOfPoints[i][1], 1));
		}

		else {
			points.push_back(new MyPoint(coordinatesOfPoints[i][0],
										 coordinatesOfPoints[i][1], 0));
		}

	}
}
//---------------------------------------------------------------------------


void TForm1::Clear() {
	for (size_t i = 0; i < points.size(); ++i) {
		delete points[i];
	}
	points.clear();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::FormClose(TObject *Sender, TCloseAction &Action)
{
    Clear();
}
//---------------------------------------------------------------------------


