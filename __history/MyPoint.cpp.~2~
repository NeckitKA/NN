//---------------------------------------------------------------------------

#pragma hdrstop

#include "MyPoint.h"
#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
//---------------------------------------------------------------------------

Point::Point(int x, int y, bool color) {
	SetX(x);
	SetY(y);
	SetColor(color);
}
//---------------------------------------------------------------------------

void Point::SetX(int x) {
	X = x;
}
//---------------------------------------------------------------------------

void Point::SetY(int y) {
	Y = y;
}
//---------------------------------------------------------------------------

void Point::SetColor(bool color) {
	Color = color;
}
//---------------------------------------------------------------------------

int Point::GetX() const {
	return X;
}
//---------------------------------------------------------------------------

int Point::GetY() const {
	return Y;
}
//---------------------------------------------------------------------------

bool Point::GetColor() const {
	return Color;
}
//---------------------------------------------------------------------------

void Point::ShowPoint(){
	TForm1* form = dynamic_cast<TForm1*>(Application->MainForm);
	form->Canvas->Pen->Color=clWhite;
	form->Canvas->Pen->Width=2;
	if (GetColor()) {
		form->Canvas->Brush->Color=clBlue;
		form->Canvas->Ellipse(GetX()-6,GetY()-6,GetX()+6,GetY()+6);
		return;
	}
	form->Canvas->Brush->Color=clRed;
	form->Canvas->Ellipse(GetX()-6,GetY()-6,GetX()+6,GetY()+6);

}
//---------------------------------------------------------------------------
